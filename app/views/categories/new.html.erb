<% provide(:title, 'Create Categories') %>
<h1>Create Category</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>


      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.cktext_area  :description %>


      <div style="margin-top:5px;"><%= f.submit "Create Category", class: "btn btn-large btn-primary" %></div>
    <% end %>
  </div>
</div>