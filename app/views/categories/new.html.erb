<% provide(:title, 'Create Categories') %>
<h1>Create Category</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@category) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create Category", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>