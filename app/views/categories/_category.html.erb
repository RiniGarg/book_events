<div>
  <h4><%= category.name %></h4>
  <div><%=raw(category.description)%></div>
  <div >
    <%= link_to "Edit", edit_category_path(category), class: "btn btn-mini btn-primary" %>
    <%= link_to "Delete", category, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-mini btn-danger" %>
  </div>
  <hr/>
</div>
