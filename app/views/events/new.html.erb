<% provide(:title, 'Create Event') %>
<h1>Create Event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
    

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :venue %>
      <%= f.text_field :venue %>

       <%= f.label :start_date_time %>
      <%= f.datetime_select :start_date_time %>

      <%= f.label :end_date_time %>
      <%= f.datetime_select :end_date_time %>

       <%= f.label :choose_catgeory %>
      <%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: true %>

      <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>