<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div style="min-height:500px;">
  <div class="row">
    <div class="span6 offset3">
      <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>


         <div style=" margin-top:5px;"> <%= f.submit "Save changes", class: "btn btn-large btn-primary" %> </div>
      <% end %>
    </div>
  </div>
</div>  